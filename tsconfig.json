{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 14",
    "compilerOptions": {
        "lib": [
            "esnext"
        ],
        // Transpile to commonjs code; nodejs assumes it by default.
        // Still we can use ES6 import/export in the TS code.
        "module": "commonjs",
        "target": "esnext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}